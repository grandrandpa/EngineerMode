<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_wait_progressbar_margin_t" />

    <TextView
        android:id="@+id/message_view"
        android:layout_width="@dimen/dialog_content_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_wait_message_margin_t"
        android:gravity="top|center_horizontal"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dialog_message_text_size" />


</LinearLayout>
